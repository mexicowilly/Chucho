namespace chucho.flatb;

table log_events {
    events: [log_event];
    host: string;
}

table log_event {
    formatted_message: string;
    seconds_since_epoch: ulong;
    file_name: string;
    line_number: uint;
    function_name: string;
    logger: string;
    level_name: string;
    marker: string;
    thread: string;
}

root_type log_events;
