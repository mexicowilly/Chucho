#if !defined(CHUCHO_VERSION_HPP__)
#define CHUCHO_VERSION_HPP__

#if defined(major)
#undef major
#endif

#if defined(minor)
#undef minor
#endif

/**
 * @file 
 * Chucho's version functions
 * @ingroup miscellaneous
 */

namespace chucho
{

/**
 * The Chucho version namespace
 */
namespace version
{

/**
 * The major version of Chucho in <chucho/version.hpp>.
 * @ingroup miscellaneous
 * @return the major version
 */
inline int major() { return ${CHUCHO_VERSION_MAJOR}; }
/**
 * The minor version of Chucho in <chucho/version.hpp>.
 * @ingroup miscellaneous
 * @return the minor version
 */
inline int minor() { return ${CHUCHO_VERSION_MINOR}; }
/**
 * A textual representation of Chucho's version, like "1.3" in 
 * <chucho/version.hpp>. 
 * @ingroup miscellaneous
 * @return a textual representation of Chucho's version
 */
inline const char* text() { return "${CHUCHO_VERSION}"; }

}

}

#endif
