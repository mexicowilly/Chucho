# PROVIDE: chuchod
# REQUIRE: FILESYSTEMS NETWORKING
# KEYWORD: shutdown

. /etc/rc.subr

name=chuchod
rcvar=${name}_enable
command="@CMAKE_INSTALL_PREFIX@/bin/chuchod"
command_args="> /dev/null 2>&1"
pidfile=/var/run/chuchod.pid

load_rc_config ${name}
: ${chuchod_enable:=YES}

run_rc_command "$1"
