MESSAGE(STATUS "Uninstalling the Chucho service")
IF(EXISTS /etc/rc.d/chuchod)
    EXECUTE_PROCESS(COMMAND /etc/rc.d/chuchod stop
                    COMMAND "$ENV{SHELL}" -c "${CHUCHO_SED} '/chuchod_enable/d' /etc/rc.conf > ./rc.conf.mod")
    CONFIGURE_FILE(./rc.conf.mod /etc/rc.conf COPYONLY)
ENDIF()
