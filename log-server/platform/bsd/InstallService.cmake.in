MESSAGE(STATUS "Installing the Chucho service")
EXECUTE_PROCESS(COMMAND /etc/rc.d/chuchod start
                RESULT_VARIABLE CHUCHOD_RESULT)
IF(NOT CHUCHOD_RESULT EQUAL 0)
    MESSAGE(FATAL_ERROR "Could not start the Chucho service")
ENDIF()
FILE(APPEND /etc/rc.conf "\nchuchod_enable=\"YES\"\n")
