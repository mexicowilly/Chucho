MESSAGE(STATUS "Installing the Chucho service")
MESSAGE(STATUS "Importing the service manifest")
EXECUTE_PROCESS(COMMAND "${CHUCHO_SVCCFG}" import "${CMAKE_CURRENT_BINARY_DIR}/chucho.xml"
                RESULT_VARIABLE SVCCFG_RESULT)
IF(NOT SVCCFG_RESULT EQUAL 0)
    MESSAGE(FATAL_ERROR "Could not import the service manifest")
ENDIF()

