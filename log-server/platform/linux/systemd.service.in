[Unit]
Description=Chucho logging framework log server
After=network.target
Requires=network.target

[Service]
# When running under systemd, don't use the --service argument. This
# would cause the pid file not to get created, which is how systemd
# tracks the actual pid.
ExecStart=${CMAKE_INSTALL_PREFIX}/bin/chuchod
Type=forking
PIDFile=/var/run/chuchod.pid

[Install]
WantedBy=default.target
