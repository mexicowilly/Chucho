MESSAGE(STATUS "Installing the Chucho service")
EXECUTE_PROCESS(COMMAND "${CHUCHO_SYSTEMCTL}" enable chuchod.service
                RESULT_VARIABLE SYSTEMCTL_ENABLE_RESULT)
IF(NOT SYSTEMCTL_ENABLE_RESULT EQUAL 0)
    MESSAGE(FATAL_ERROR "Could not enable the Chucho service")
ENDIF()
EXECUTE_PROCESS(COMMAND "${CHUCHO_SYSTEMCTL}" start chuchod.service
                RESULT_VARIABLE SYSTEMCTL_START_RESULT)
IF(NOT SYSTEMCTL_START_RESULT EQUAL 0)
    MESSAGE(FATAL_ERROR "Could not start the Chucho service")
ENDIF()